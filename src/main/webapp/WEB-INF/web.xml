<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>ArtVision</display-name>

  <!-- Cadastro de Usuário -->
  <servlet>
    <servlet-name>CadastroUsuario</servlet-name>
    <servlet-class>br.com.artvision.servlet.CadastroUsuarioServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastroUsuario</servlet-name>
    <url-pattern>/cadastrar-usuario</url-pattern>
  </servlet-mapping>

  <!-- Login -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>br.com.artvision.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Cadastro de Setor -->
  <servlet>
    <servlet-name>CadastrarSetor</servlet-name>
    <servlet-class>br.com.artvision.servlet.CadastrarSetorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastrarSetor</servlet-name>
    <url-pattern>/cadastrar-setor</url-pattern>
  </servlet-mapping>

  <!-- Cadastro de Cargo -->
  <servlet>
    <servlet-name>CadastrarCargo</servlet-name>
    <servlet-class>br.com.artvision.servlet.CadastrarCargoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastrarCargo</servlet-name>
    <url-pattern>/cadastrar-cargo</url-pattern>
  </servlet-mapping>

  <!-- Página de boas-vindas padrão -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
